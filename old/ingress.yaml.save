apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: ingress1
  annotations:
     nginx.ingress.kubernetes.io/auth-type: basic
     nginx.ingress.kubernetes.io/auth-secret: basic-auth
     nginx.ingress.kubernetes.io/auth-realm: "Authentication Required - ok"
spec:
  rules:
    - host: subdomain1
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: externalsvc
                port:
                  number: 80
    - host: subdomain2
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: externalsvc
                port:
                  number: 80
  tls:
    - hosts:
        - subdomain1
      secretName: basic-auth
